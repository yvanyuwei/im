<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vm.im.dao.group.ChatGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.vm.im.entity.group.ChatGroup">
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="avatar" property="avatar" jdbcType="VARCHAR" />
        <result column="master" property="master" jdbcType="VARCHAR" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="notice" property="notice" jdbcType="VARCHAR" />
        <result column="can_speak" property="canSpeak" jdbcType="INTEGER" />
        <result column="type" property="type" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="create_by" property="createBy" jdbcType="VARCHAR" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
        <result column="del_flag" property="delFlag" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List" >
      id, name, avatar, master, remarks, notice, can_speak, type, create_time, create_by,
      update_time, update_by, del_flag
    </sql>

    <select id="selectAllGroup" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from im_chat_group
    </select>

    <select id="selectNameByGroupId" resultType="java.lang.String" parameterType="java.lang.String">
        select name from im_chat_group where id = #{groupId,jdbcType=VARCHAR}
    </select>

</mapper>
